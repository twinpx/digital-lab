.b-header
  background-color #43a0de
  
  .row
    margin-bottom 0
  
  &__logo
    width 70%
    height auto
    display inline-block
    line-height 64px
    
    img
      display inline-block
      vertical-align middle
    
    section.b-section &
      display none
    
  
  nav
    background-color transparent
    box-shadow none
    
    ul
      text-align center
      
      li
        float none
        display inline
      
      a
        text-decoration underline
        
        &:hover
          background none
      
      a,
      span
        font-size 12pt
        color #fff
        display inline
        padding 0 15px
        
      span
        cursor default
        
  &__menu-icon
    display inline-block
    width 24px
    height 24px
    background embedurl( 'img/menu-icon.gif' ) no-repeat center center
    margin-top 20px
    
.side-nav
  background-color #43a0de
  padding-top 20px
  
  &,
  & a,
  & a:hover
    color #fff
  
.b-footer
  background-color #43a0de
  color #fff
  padding-bottom 48px
  font-size 8pt
  position absolute
  bottom 0
  width 100%
  height 500px
  
  img
    margin 211px 0 150px
    
.b-container
  overflow hidden
  padding 55px 0
  