html
  position relative
  min-height 100%
  line-height 1.7

body
  background #fff
  font-size 12pt
  font-family "Open Sans", Arial, sans-serif
  margin-bottom 500px
  
.b-section
  position relative
  min-height 100vh
  
section.i-blue
    background-color #43a0de
    
.b-logo
  position absolute
  top 50%
  left 50%
  margin -23px 0 0 -110px
  
.b-text-animation
  position absolute
  top 50%
  left 50%
  margin 130px 0 0 -205px  
  font-size 22pt
  font-weight 100
  color #fff
  text-align center
  width 410px
  height 160px
  overflow hidden
  line-height 40px
  
  @media ( max-width 767px )
    font-size 18pt
  
  &__visible
    height 40px
    overflow hidden
    
  ul
    animation change 15s infinite
    padding 0
    margin 0
    
  li
    line-height 40px
    margin 0
    padding 0
    list-style-type none
    
@keyframes change {
  0%, 10%, 100% {transform:translateY(0);}
  17%,27% {transform:translateY(-25%);}
  34%,44% {transform:translateY(-50%);}
  51%,61% {transform:translateY(-75%);}
  68%,78% {transform:translateY(-50%);}
  84%,94% {transform:translateY(-25%);}
}
  
a
  color #1555a3
  
  &:hover,
  &:focus
    color lighten( #1555a3, 10% )

  
img
  vertical-align top
  
  &.img-responsive
    max-width 100%
    height auto
    
hr
  border 0
  margin 30px 0
  
  &.i-size-L
    margin 50px 0
  
  &.i-size-XL
    margin 100px 0
    
  &.i-line
    border-top 1px solid #f0f0f0
    //background embedurl( 'img/hr.gif' ) repeat-x left center
  
h1
  font-size 36pt
  font-weight 300
  margin 0 0 35px
  line-height 120%
  word-wrap break-word
  
.row.b-h1
  margin-bottom 0

h2
  font-size 22pt
  font-weight 300
  margin-bottom 14px
  
  &:first-of-type
    margin-top 0
    
ul.browser-default
  margin-left 40px
  
  li
    margin-bottom 17px
    list-style-type none
    position relative
    
    &:before
      content '—'
      display block
      position absolute
      top -1px
      left -40px
  
.text-small
  font-size 10.5pt

.text-large
  font-size 13.5pt
  
.text-xlarge
  font-size 22pt
  
.pagination
  margin 50px 0

  li

    a
      color #1555a3
      font-size 13.5pt
      
    span
      display inline-block
      padding 0 10px
      line-height 30px
      
.b-news-list
  
  .row
    margin-bottom 0
  
  h2
    margin-top 9px
    
  p
    line-height 1.3
    
  .right-align
    margin-top 10px
    line-height 24px
    
    @media only screen and (max-width: 600px)
      text-align left
    
    .text-xlarge
      line-height 30px
      
.btn,
.btn-large
  background-color #43a0de
  color #fff
  box-shadow none
  font-size 9pt
  
  &:hover
    background-color lighten( #43a0de, 10% )
    box-shadow none
  
  a&
    &,
    &:hover,
    &:focus
      color #fff
      
.btn-large
  height 43px
  line-height 43px
  
.b-projects-list
  
  a
    display inline-block
    position relative
    
  .valign-wrapper
    position absolute
    width 100%
    height 100%
    
  .valign
    position absolute
    width 100%
    color #fff
    font-size 22pt
    font-weight 100
    line-height 36px
    
    
    
    